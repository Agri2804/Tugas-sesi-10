{
    "name": "tugas-sesi-9-selenium-mocha",
    "version": "1.0.0",
    "description": "Selenium WebDriver tests using Mocha with Mochawesome reports",
    "scripts": {
        "test": "mocha tests/sesi-9/tugas_sesi9.js --timeout 60000",
        "test-login": "mocha tests/sesi-9/test_sesi9.js -- grep 'login' --recursive --timeout 60000",
        "test-parallel": "mocha tests --parallel --recursive --timeout 60000",
        "test-pertama": "mocha tests --grep 'Pertama' --recursive --timeout 60000",
        "jalanin-mochawesome": "mocha tests --recursive --timeout 60000 --reporter mochawesome",
        "jalanin-simple-html": "mocha tests/sesi-9/tugas_sesi9.js --timeout 60000 --reporter mocha-simple-html-reporter --reporter-options output=reports/report-sesi-9.html",
        "jalanin-report-excel": "mocha tests --recursive --timeout 60000 --reporter excel-reporter.js"
    },
    "dependencies": {
        "selenium-webdriver": "^4.17.0"
    },
    "devDependencies": {
        "exceljs": "^4.4.0",
        "mocha": "^10.4.0",
        "mocha-simple-html-reporter": "^2.0.0",
        "mochawesome": "^7.1.3"
    }
}
